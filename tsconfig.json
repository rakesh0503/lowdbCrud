{
  // https://www.typescriptlang.org/tsconfig#compilerOptions
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["node","jest"],
    "outDir": "dist",
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules"],
  "paths": {
    "*": ["./node_modules/*"]
  }
}